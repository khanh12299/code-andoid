<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBox
        android:id="@+id/checkbox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp" />
    <CheckBox
        android:id="@+id/checkbox2"
        android:layout_marginBottom="130dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/checkbox3"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:id="@+id/seebar1"
        android:thumb="@drawable/icon1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp"
        android:layout_toRightOf="@+id/checkbox1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:id="@+id/seebar2"
        android:thumb="@drawable/icon2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:layout_toRightOf="@+id/checkbox1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:id="@+id/seebar3"
        android:thumb="@drawable/icon3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_toRightOf="@+id/checkbox1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textview"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/sign"
        android:layout_width="130dp"
        android:layout_height="75dp"/>
    <ImageView
        android:id="@+id/imageview"
        android:layout_margin="30dp"
        android:background="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@+id/imageview"
        android:textColor="#F66161"
        android:hint="điểm của bạn:"
        android:textSize="25dp"
        android:id="@+id/texview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:id="@+id/button"
        android:background="@drawable/play"
        android:layout_below="@+id/imageview"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

</RelativeLayout>