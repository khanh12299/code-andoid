<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBox
        android:id="@+id/checkbox1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/checkbox2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/checkbox3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <SeekBar
        android:id="@+id/seebar1"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/icon1"
        android:layout_marginLeft="35dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="125dp" />
    <SeekBar
        android:id="@+id/seebar2"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/icon2"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="95dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <SeekBar
        android:id="@+id/seebar3"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/icon3"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/texview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="688dp"
        android:layout_marginRight="688dp"
        android:text="100"
        android:textColor="#DD2626"
        android:textSize="50dp" />
    <ImageView
        android:id="@+id/imageview"
        android:layout_width="630dp"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="109dp"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/logo" />
    <ImageButton
        android:id="@+id/button"
        android:background="@drawable/play"
        android:layout_below="@+id/imageview"
        android:layout_marginTop="38dp"
        android:layout_centerInParent="true"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <ImageView
        android:layout_alignParentRight="true"
        android:background="@drawable/sign"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
</RelativeLayout>